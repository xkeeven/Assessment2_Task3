<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

 <EditText
        android:id="@+id/etFirstName"
        android:hint="Put Your First Name Here:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

 <EditText
        android:id="@+id/etLastName"
        android:hint="Put Your Last Name Here:"
        android:layout_below="@id/etFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
 <EditText
        android:id="@+id/etPhone"
        android:layout_below="@id/etLastName"
        android:hint="Put Your Phone Number Here:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
 <EditText
        android:id="@+id/etAddress"
        android:hint="Put Your Address Here:"
        android:layout_below="@id/etPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

 <EditText
        android:id="@+id/etCountry"
        android:hint="Put Your Country Name Here:"
        android:layout_below="@id/etAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

 <EditText
        android:id="@+id/etPassword"
        android:hint="Put Your Password Here:"
        android:layout_below="@id/etCountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

 <Button
        android:id="@+id/btnConfirm"
        android:gravity="center"
        android:layout_below="@id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:layout_margin="20dp"
        android:layout_alignParentRight="true"/>

</LinearLayout>
