<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/Back2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
    />

    <TextView
        android:id="@+id/ItemName2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Item2"
        android:gravity="center"
        android:textSize="50dp"
        android:layout_below="@+id/ItemTop2"
        android:layout_marginTop="40dp"
    />

    <TextView
        android:id="@+id/ItemPrice2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price:"
        android:textSize="25dp"
        android:layout_below="@+id/ItemName2"
        android:layout_marginTop="10dp"
    />

    <TextView
        android:id="@+id/ItemSeller2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seller:"
        android:textSize="25dp"
        android:layout_below="@+id/ItemPrice2"
        android:layout_marginTop="10dp"
    />

    <TextView
        android:id="@+id/ItemAddress2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:textSize="25dp"
        android:layout_below="@+id/ItemSeller2"
        android:layout_marginTop="10dp"
    />

    <TextView
        android:id="@+id/ItemPhone2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone:"
        android:textSize="25dp"
        android:layout_below="@+id/ItemAddress2"
        android:layout_marginTop="10dp"
    />

    <Button
        android:id="@+id/map2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/navigation2"
        android:text="map"
    />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        android:layout_alignParentBottom="true"
        app:menu="@menu/navigation"
    />

</RelativeLayout>